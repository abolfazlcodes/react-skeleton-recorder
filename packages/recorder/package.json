{
  "name": "react-skelify",
  "version": "1.0.3",
  "description": "It is a simple package with zero configuration for usage. It creates skeleton loadings when wrapped around the DOM elements automatically",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "private": false,
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "author": "Abolfazl Jamshidi",
  "keywords": [
    "react",
    "skeleton",
    "loading",
    "skeleton-loader",
    "placeholder",
    "ui"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "computed-styles": "^1.1.2"
  },
  "license": "MIT"
}
